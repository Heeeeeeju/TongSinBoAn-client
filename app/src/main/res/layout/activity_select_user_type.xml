<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="k4284.tongsinboan.Intro.SelectUserTypeActivity">

    <org.honorato.multistatetogglebutton.MultiStateToggleButton
        android:id="@+id/user_type_option"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        mstb:values="@array/user_type"
        mstb:mstbColorNotPressedText="@android:color/darker_gray"
        mstb:mstbColorPressedText="@android:color/white"/>

    <EditText
        android:id="@+id/user_type_group_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/user_type_submit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="확인"/>

</LinearLayout>
