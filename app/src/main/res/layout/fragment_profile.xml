<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="k4284.tongsinboan.Intro.RegisterActivity">

    <ImageView
        android:id="@+id/passport_logo"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/mnd_logo_signature"/>

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="360dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/profile_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="이름"
        android:textSize="25sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/profile_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="소속"
        android:textSize="20sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/profile_belong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부서"
        android:textSize="20sp"
        android:gravity="center"/>

</LinearLayout>
